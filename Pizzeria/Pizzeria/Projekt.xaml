        <Label Content="Twoje zamówienie:" Background="#00000000" FontSize="24" Margin="385,234,-0.4,494.4" FontFamily="Pristina" Foreground="White"/>
        <Label Content="Do zapłaty:" Background="#00000000" FontSize="24" Margin="481,274,92.6,445.4" FontFamily="Pristina" Foreground="White"/>
        <Label Content="kwota" Background="#00000000" FontSize="24" Margin="585,274,9.6,454.4" FontFamily="Pristina" Foreground="White"/>
