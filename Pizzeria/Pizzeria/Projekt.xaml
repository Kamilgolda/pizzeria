            </StackPanel>
        </ScrollViewer>

        <Label Content="Do zaplaty:" Background="#00000000" FontSize="24" Margin="481,274,92.6,445.4" FontFamily="Pristina" Foreground="White"/>
        <Label Content="kwota" Background="#00000000" FontSize="24" Margin="585,274,9.6,454.4" FontFamily="Pristina" Foreground="White"/>
        <Button Content="Nasze Pizze" HorizontalAlignment="Center" Height="93" Margin="0,320" Style="{DynamicResource ButtonStyle2}" VerticalAlignment="Center" Width="338" FontFamily="Pristina" FontSize="48" IsCancel="True" Foreground="White"/>
        <Button Content="Wlasna kompozycja" HorizontalAlignment="Center" Height="93" Margin="0,450,0,200" Style="{DynamicResource ButtonStyle3}" VerticalAlignment="Center" Width="466" FontFamily="Pristina" FontSize="48" Foreground="White"/>
        <Button Content="Zamów" HorizontalAlignment="Center" Height="93" Margin="0,580,0,80" Style="{DynamicResource ButtonStyle4}" VerticalAlignment="Center" Width="547.6" FontFamily="Pristina" FontSize="48" Foreground="White"/>
    </Grid>
</Window>

